@model   IEnumerable<Category>

<li class="dropdown d-flex">
    <a asp-controller="Pie"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Pies<b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
        <li>
            <a asp-controller="Pie" asp-action="List" asp-route-category="@category.CategoryName">@category.CategoryName</a>
        </li>
        }
        <li class="devider"></li>
        <li>
            <a asp-controller="Pie" asp-action="List" asp-route-category="">VIew All Pies</a>
        </li>
    </ul>

</li>
